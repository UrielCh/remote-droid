{
  "name": "remote-droid",
  "type": "module",
  "version": "0.1.12",
  "description": "OpenAPI to control your android devices",
  "author": "Uriel Chemouni <uchemouni@gmail.com> (https://urielch.github.io/)",
  "private": false,
  "license": "MIT",
  "keywords": [
    "adb",
    "adbkit",
    "android",
    "logcat",
    "monkey",
    "scrcpy",
    "minicap",
    "REST API"
  ],
  "bugs": {
    "url": "https://github.com/UrielCh/remote-droid/issues"
  },
  "main": "./dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/UrielCh/remote-droid.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "_test:e2e": "dotenv -e .env.test -- jest --forceExit --detectOpenHandles --config ./test/jest-e2e.json",
    "_test:e2e:watch": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "test:e2e": "run-s redis-test-up _test:e2e redis-test-down",
    "test:e2e:watch": "run-s redis-test-up _test:e2e:watch redis-test-down",
    "docker:build": "docker build --pull --rm -f Dockerfile -t urielch/remote-droid:latest .",
    "docker:debug": "docker run -it --rm urielch/remote-droid:latest /bin/sh",
    "docker:buildx": "docker buildx build --platform linux/amd64,linux/arm64 -t urielch/remote-droid:latest -t urielch/remote-droid:0.1.0 --push ."
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-ws": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/websockets": "^11.1.3",
    "@types/jest": "^30.0.0",
    "@u4/adbkit": "^5.0.0",
    "argon2": "^0.43.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^14.0.0",
    "csv-reader": "^1.0.12",
    "express": "^5.1.0",
    "lru-cache": "^11.1.0",
    "p-timeout": "6.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "promise-status-async": "^1.2.10",
    "redis": "^4.5.1",
    "redis-om": "^0.3.6",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.2",
    "throttle-debounce": "5.0.2",
    "undici": "^7.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.8",
    "@types/passport-jwt": "^4.0.1",
    "@types/rimraf": "^4.0.5",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^6.0.3",
    "@types/throttle-debounce": "^5.0.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "30.0.3",
    "npm-run-all": "^4.1.5",
    "pactum": "^3.7.6",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "files": [
    "dist"
  ]
}
