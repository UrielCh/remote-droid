{
  "name": "remote-droid",
  "version": "0.0.3",
  "description": "OpenAPI to controle your android devices",
  "author": "Uriel Chemouni <uchemouni@gmail.com> (https://urielch.github.io/)",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "db:dev:up": "docker compose up dev-redis -d",
    "db:dev:rm": "docker compose rm -f -s -v dev-redis",
    "redis-test-up": "docker compose up test-redis -d",
    "redis-test-down": "docker compose rm -f -s -v test-redis",
    "_test:e2e": "dotenv -e .env.test -- jest --forceExit --detectOpenHandles --config ./test/jest-e2e.json",
    "_test:e2e:watch": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "test:e2e": "run-s redis-test-up _test:e2e redis-test-down",
    "test:e2e:watch": "run-s redis-test-up _test:e2e:watch redis-test-down",
    "docker:android:up": "docker compose up android -d",
    "docker:build": "docker build --pull --rm -f Dockerfile -t  urielch/remote-droid:latest ."
  },
  "dependencies": {
    "@nestjs/common": "^9.0.11",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.11",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.11",
    "@nestjs/platform-ws": "^9.0.11",
    "@nestjs/swagger": "^6.0.5",
    "@nestjs/websockets": "^9.0.11",
    "@u4/adbkit": "^4.1.9",
    "argon2": "^0.28.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "csv-reader": "^1.0.9",
    "p-timeout": "4.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "picocolors": "^1.0.0",
    "promise-status-async": "^1.2.10",
    "redis": "^4.2.0",
    "redis-om": "^0.3.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "sharp": "^0.30.7",
    "throttle-debounce": "4.0.0",
    "undici": "^5.9.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.11",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.7",
    "@types/node": "^18.7.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/rimraf": "^3.0.2",
    "@types/sharp": "^0.30.5",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "28.1.3",
    "npm-run-all": "^4.1.5",
    "pactum": "^3.1.14",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "files": [
    "dist",
    "resources"
  ]
}
